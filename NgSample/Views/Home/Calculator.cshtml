
@{
    Layout = null;
}

<h2>Calculator</h2>

<div data-ng-controller="AddController">
    <h4>The simplest adding machine ever</h4>
    <button data-ng-click="add(1)" class="button">Add</button>
    <a data-ng-click="subtract(1)" class="button alert">Subtract</a>
    <h4>Current count: {{ counter }}</h4>
</div>